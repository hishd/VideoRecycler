<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_5sdp"
    android:layout_marginBottom="@dimen/_5sdp"
    android:layout_marginLeft="@dimen/_10sdp"
    android:layout_marginRight="@dimen/_10sdp"
    android:background="@drawable/shape_round_corner_viewbg"
    android:padding="@dimen/_10sdp">

    <com.hishd.roundcornerimageview.RoundCornerImageView
        android:id="@+id/imgVideoThumbnail"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:scaleType="centerCrop"
        android:src="@color/colorPrimaryDark"
        app:sriv_left_bottom_corner_radius="@dimen/_5sdp"
        app:sriv_left_top_corner_radius="@dimen/_5sdp"
        app:sriv_right_bottom_corner_radius="@dimen/_5sdp"
        app:sriv_right_top_corner_radius="@dimen/_5sdp" />

    <TextView
        android:id="@+id/txtVidName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_toEndOf="@id/imgVideoThumbnail"
        android:text="Name of the Video" />


    <TextView
        android:id="@+id/txtVidSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtVidName"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_toEndOf="@id/imgVideoThumbnail"
        android:text="Size" />

    <Button
        android:id="@+id/btnPlay"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_alignBottom="@id/imgVideoThumbnail"
        android:layout_alignParentEnd="true"
        android:background="@drawable/ic_play" />

</RelativeLayout>